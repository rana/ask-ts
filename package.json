{
  "name": "ask",
  "version": "0.1.0",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "ask": "./src/cli.ts"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun run scripts/build.ts",
    "install": "bun run build && mv ask ~/.local/bin/ask",
    "test": "bun test",
    "check": "tsc --noEmit",
    "lint": "biome check .",
    "fix": "biome check --write .",
    "format": "biome format --write .",
    "ci": "bun run check && bun run lint"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "latest",
    "@types/jsdom": "^27.0.0",
    "@types/turndown": "^5.0.6"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock": "^3.940.0",
    "@aws-sdk/client-bedrock-runtime": "^3.941.0",
    "@mozilla/readability": "^0.6.0",
    "chalk": "^5.3.0",
    "citty": "^0.1.5",
    "jsdom": "^27.2.0",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2",
    "zod": "^4.1.13"
  }
}